{
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "printWidth": 150,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "ignore",
    "plugins": [
        "prettier-plugin-tailwindcss"
    ],
    "tailwindConfig": "./tailwind.config.ts",
    "tailwindFunctions": [
        "clsx"
    ],
    "overrides": [
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2,
                "useTabs": false
            }
        }
    ]
}