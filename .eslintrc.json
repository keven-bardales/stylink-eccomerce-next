{
  "extends": "next/core-web-vitals",
  "plugins": ["prettier", "perfectionist"],
  "ignorePatterns": ["**/node_modules/**"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true,
        "trailingComma": "es5",
        "printWidth": 150,
        "endOfLine": "lf",
        "htmlWhitespaceSensitivity": "ignore"
      },
      {
        "usePrettierrc": true
      }
    ]
  }
}
