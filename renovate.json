  {
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "labels": [
      "deps",
      "enhancement"
    ],
    "assignees": [
      "sawa-ko",
      "taboradeyvi"
    ],
    "assigneesFromCodeOwners": true,
    "baseBranches": [
      "next"
    ],
    "cloneSubmodules": true,
    "packageRules": [
      {
        "matchUpdateTypes": [
          "minor",
          "patch",
          "pin",
          "digest"
        ],
        "automerge": true
      }
    ],
    "extends": [
      ":gitSignOff"
    ]
  }